<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Mains.BoxViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BoxViewPage">
    <VerticalStackLayout Padding="10">

        <BoxView
            Margin="0,20"
            CornerRadius="30"
            HeightRequest="300"
            WidthRequest="100"
            Color="Red" />

        <BoxView
            CornerRadius="20"
            HeightRequest="100"
            WidthRequest="100"
            Color="Blue" />

        <Label
            Padding="0,20"
            HorizontalOptions="Center"
            Text="Isso é uma interrogação formada à partir de 2 boxViews."
            TextColor="White"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>