<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Forms.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerPage">
    <VerticalStackLayout Padding="10">
        <Picker
            Title="Marca"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            TitleColor="LightBlue">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Toyota</x:String>
                    <x:String>Ford</x:String>
                    <x:String>Honda</x:String>
                    <x:String>BMW</x:String>
                    <x:String>Audi</x:String>
                    <x:String>Subaru</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label x:Name="LblSelect" />
    </VerticalStackLayout>
</ContentPage>