<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Visuals.ShadowPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ShadowPage">
    <VerticalStackLayout Padding="10" BackgroundColor="White">
        <Border Padding="10">
            <Border.Shadow>
                <Shadow
                    Brush="Red"
                    Opacity="1"
                    Radius="10"
                    Offset="20,20" />
            </Border.Shadow>
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Text="ShadowPage"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>