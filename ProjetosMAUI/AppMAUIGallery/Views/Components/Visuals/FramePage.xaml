<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Visuals.FramePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FramePage">
    <VerticalStackLayout Padding="10" BackgroundColor="White">
        <Frame
            BackgroundColor="LightBlue"
            BorderColor="Blue"
            CornerRadius="0"
            HasShadow="True">

            <Label
                HorizontalOptions="Center"
                Text="Usar o frame não é recomendado no windows, no MAUI existem outros tipos que são melhores."
                TextColor="Black"
                VerticalOptions="Center" />

        </Frame>
    </VerticalStackLayout>
</ContentPage>