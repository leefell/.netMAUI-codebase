<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Visuals.BorderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BorderPage">
    <VerticalStackLayout Padding="10">
        <Border
            Padding="20"
            Stroke="Blue"
            StrokeDashArray="1,1,3,5,3,2"
            StrokeDashOffset="9"
            StrokeLineCap="Square"
            StrokeLineJoin="Round"
            StrokeThickness="3">
            <Label
                HorizontalOptions="Center"
                Text="O Border é melhor que o frame. Ele também possui propriedades distintas como gradiente de cores."
                VerticalOptions="Center" />

        </Border>

        <Border
            Margin="0,20"
            Padding="10"
            Stroke="Red"
            StrokeShape="RoundRectangle 5,10,15,20">
            <!--  ^ Controlar elementos indivualmente  -->

            <Label Text="Mostrando o Strokeshape" />
        </Border>
    </VerticalStackLayout>
</ContentPage>