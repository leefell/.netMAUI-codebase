    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EntryCellPage">
    <VerticalStackLayout>
        <TableView>
            <TableSection Title="Grupo da faculdade">
                <EntryCell
                    HorizontalTextAlignment="Start"
                    Label="Digite o nome do primeiro membro: "
                    LabelColor="LightBlue"
                    Placeholder="Membro 1" />
                <EntryCell Label="Digite o nome do segundo membro: " />
                <EntryCell Label="Digite o nome do terceiro membro: " />
                <EntryCell Label="Digite o nome do quarto membro: " />
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>