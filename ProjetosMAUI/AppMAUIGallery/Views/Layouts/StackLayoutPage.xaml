<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout
        Margin="20"
        Padding="20"
        Orientation="Vertical"
        Spacing="10">

        <Label Text="StackLayout põe um elemento abaixo do outro! E admite qualquer outro layout dentro dele!" />


        <StackLayout
            Padding="20"
            BackgroundColor="AliceBlue"
            Orientation="Horizontal"
            Spacing="10">
            <!--  Distancia horizontal  -->

            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
            <Button HorizontalOptions="End" Text="Olá Mundo 2!" />
        </StackLayout>

        <!--  Entretanto é melhor usar  -->

        <VerticalStackLayout BackgroundColor="Aquamarine">
            <Label Text="Label 1" />
            <Label Text="Label 2" />
        </VerticalStackLayout>

        <HorizontalStackLayout BackgroundColor="MediumAquamarine">
            <Label Text="Label 3" />
            <Label Text="Label 4" />
        </HorizontalStackLayout>

        <Button
            HeightRequest="100"
            HorizontalOptions="Center"
            Text="Olá Mundo!"
            WidthRequest="200" />

    </StackLayout>
</ContentPage>