<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout Orientation="Vertical">
        <Label Text="StackLayout põe um elemento abaixo do outro! E admite qualquer outro layoout dentro dele!" />

        <Button
            HeightRequest="100"
            HorizontalOptions="Center"
            Text="Olá Mundo!"
            WidthRequest="200" />

        <StackLayout BackgroundColor="Maroon" Orientation="Horizontal">

            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
            <Button HorizontalOptions="End" Text="Olá Mundo!" />

        </StackLayout>
    </StackLayout>
</ContentPage>