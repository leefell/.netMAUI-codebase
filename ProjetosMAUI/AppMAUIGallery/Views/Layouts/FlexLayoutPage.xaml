<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.FlexLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlexLayoutPage">
    <FlexLayout
        AlignItems="Start"
        Direction="Column"
        JustifyContent="Start">

        <Label
            Padding="10"
            Background="BlueViolet"
            FlexLayout.Grow="1"
            FlexLayout.Order="1"
            Text="Grow e Order" />

        <Label
            Padding="10"
            Background="DeepSkyBlue"
            FlexLayout.AlignSelf="Center"
            FlexLayout.Basis="20%"
            FlexLayout.Order="2"
            Text="Linha 2" />

        <Label
            Padding="10"
            Background="CadetBlue"
            FlexLayout.AlignSelf="End"
            FlexLayout.Order="3"
            Text="Linha 3" />

        <Label
            Margin="0,10,0,0"
            Padding="10"
            Background="BlanchedAlmond"
            CharacterSpacing="2"
            FlexLayout.AlignSelf="Stretch"
            FlexLayout.Grow="1"
            FlexLayout.Order="4"
            Text="Essa linha esta com a propriedade Stretch e a Grow" />

        <Label
            Padding="10"
            Background="Aquamarine"
            FlexLayout.Shrink="0"
            Text="Linha 5" />

    </FlexLayout>
</ContentPage>